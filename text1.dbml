enum UserRole {
    admin
    mechanic
    customer
}

Table Usuarios {
    id_usuario serial [pk]
    user_name varchar(50) [not null, unique]
    email varchar(100) [not null, unique]
    password varchar(255) [not null]
    direccion varchar(255)
    telefono varchar(15)
    role UserRole [not null] 
    is_active boolean [not null,default: true]
    created_at timestamp [default: `now()`, not null] //fecha de creacion
    updated_at timestamp [default: `now()`] //fecha de actualizacion
    metodo_pago varchar [not null]
}

Table Producto {
    id_producto serial [pk]
    electrodomesticos varchar
    deportes varchar
    ropa varchar
    video_juegos varchar 
    herramientas varchar
    juguetes varchar
    accesorios varchar
    usuario int [not null]

}

Table MetodoPago {
    id_metodo_pago serial [pk]
    tipo_banco varchar [not null, unique]
    tipo_cuenta varchar [not null, unique]
    tipo_tarjeta varchar [not null, unique]
    usuario int [not null] // Relacion con la tabla usuarios
    
}

ref: Usuarios.id_usuario < MetodoPago.usuario

Table Redireccionar {
    id_redireccionar serial [pk]
    busqueda varchar(255)
    compras_frecuentes varchar(255)
    usuario int  // Relacion con la tabla usuarios
    
}

ref: Redireccionar.usuario > Producto.usuario
ref: Usuarios.id_usuario < Redireccionar.usuario

Table Notificaciones {
    id_notificaiones serial [pk]
    tipo_notificacion varchar(100) [not null]
    mensaje text [not null]
    usuario int [ not null] // Relacion con la tabla usuarios
    creado_en timestamp [default: `now()`, not null] //fecha de creacion
    visto boolean [default: false, not null] // Indica si la notificacion ha sido leida
}

ref: Producto.usuario < Notificaciones.usuario
Table Envios {
    id_envios serial [pk]
    direccion_envio varchar(255) [not null]
    fecha_envio timestamp [default: `now()`, not null] //fecha de envio
    estado_envio varchar(50) [not null] //estado del envio
    usuario int [not null] // Relacion con la tabla usuarios
}

ref: Usuarios.id_usuario < Envios.usuario

